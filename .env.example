# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000

# MongoDB Connection
# For local development: mongodb://127.0.0.1:27017/lms_app
# For production (MongoDB Atlas): mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGO_URI=mongodb://127.0.0.1:27017/lms_app

# JWT Secret Key (use a strong, random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=your-secret-key-change-this-in-production

# Frontend URL (for CORS configuration)
# For local development: http://localhost:5173
# For production: https://your-site.netlify.app
# Use * to allow all origins (not recommended for production)
FRONTEND_URL=http://localhost:5173

# Node Environment
NODE_ENV=development
